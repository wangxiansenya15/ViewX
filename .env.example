# ========================================
# ViewX Environment Variables Configuration
# ========================================
# Instructions:
# 1. Copy this file to .env (do not commit .env to Git)
# 2. Fill in the actual values
# 3. Set these environment variables in your IDE or system

# ----------------------------------------
# Mail Service Configuration
# ----------------------------------------
# QQ Mail Configuration (for sending verification codes)
MAIL_USERNAME=your_email@qq.com
MAIL_PASSWORD=your_mail_auth_code  # QQ Mail authorization code, not login password

# ----------------------------------------
# OAuth2 Social Login Configuration
# ----------------------------------------
# GitHub OAuth2
# Get credentials at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Gitee OAuth2 (Optional)
# GITEE_CLIENT_ID=your_gitee_client_id
# GITEE_CLIENT_SECRET=your_gitee_client_secret

# ----------------------------------------
# AI Service Configuration
# ----------------------------------------
# Alibaba Cloud DashScope API
# Get API key at: https://dashscope.console.aliyun.com/
AI_API_KEY=your_dashscope_api_key

# ----------------------------------------
# Database Configuration (Optional, if not using defaults)
# ----------------------------------------
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=viewx_db
# DB_USERNAME=postgres
# DB_PASSWORD=your_db_password


# ----------------------------------------
# FILE_STORAGE Configuration
# ----------------------------------------
FILE_STORAGE_BASE_URL=http://localhost/viewx
FILE_STORAGE_UPLOAD_DIR=/home/arthur/test_images
FILE_STORAGE_LOCAL_DOMAIN=http://localhost:80/avatars/


# ----------------------------------------
# Redis Configuration (Optional, if not using defaults)
# ----------------------------------------
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# ----------------------------------------
# RabbitMQ Configuration (Optional, if not using defaults)
# ----------------------------------------
# RABBITMQ_HOST=localhost
# RABBITMQ_PORT=5672
# RABBITMQ_USERNAME=guest
# RABBITMQ_PASSWORD=guest
